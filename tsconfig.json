{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
